package Vale;

import java.util.*;

public class CountingSort{
 
 
  public static void main(String[] args) {
	  int k = 3;
	  int A[] = {0,3,1,0,2,1,1,2};
	  int B[] = new int[8];
	  int C[] = new int[k+1];
	  for(int i=0; i<=k;i++){
		  C[i] = 0;
	  } 
	  for(int j=1;j<A.length;j++){
		  C[A[j]] = C[A[j]] + 1;
	  }
	  
	  System.out.println();
	  for(int i=1; i<8;i++){
		  System.out.print(A[i]+", ");
	  }
	  System.out.println();
	  for(int i=0; i<=k;i++){
		  System.out.print(C[i]+", ");
	  }
	  for(int i=1;i<=k;i++){
		  C[i] = C[i] + C[i-1];
	  }
	  System.out.println();
	  for(int i=0; i<=k;i++){
		  System.out.print(C[i]+", ");
	  }
	  for(int j=A.length-1;j>=1;j--){
		  B[C[A[j]]] = A[j];
		  C[A[j]] = C[A[j]] - 1;
	  }
	  for(int i=0; i<=7;i++){
		  System.out.print(B[i]+", ");
	  }
  }
}
